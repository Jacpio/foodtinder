{
    "openapi": "3.0.0",
    "info": {
        "title": "FoodTinder API",
        "description": "API do logowania, swipe’ów i rekomendacji dań. Po prostu Tinder dla jedzenia!",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local"
        }
    ],
    "paths": {
        "api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logowanie",
                "operationId": "0aabac24e722c84ecb25cbe844514866",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/LoginRequest"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "api/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Wylogowanie",
                "operationId": "51c1fe6ecf4e5fb1424d17d9606d99a2",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "api/verify-email/{id}/{hash}": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Potwierdzenie adresu email",
                "operationId": "36da40610f39b3888902c5a1b2010396",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "hash",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Email already verified"
                    },
                    "200": {
                        "description": "Email successfully verified"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/dishes": {
            "get": {
                "tags": [
                    "Dishes"
                ],
                "summary": "Lista potraw",
                "operationId": "ddf841d9ba35d917bd22a504c13b2f72",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Dish"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Dishes"
                ],
                "summary": "Utwórz nową potrawę",
                "operationId": "4055da700195ec26e05d953ac8fe8a0a",
                "requestBody": {
                    "description": "Użyj multipart/form-data, obrazek jest opcjonalny",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "name",
                                    "category_id",
                                    "cuisine_id",
                                    "flavour_id"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Pizza Margherita"
                                    },
                                    "category_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "cuisine_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "flavour_id": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Klasyk",
                                        "nullable": true
                                    },
                                    "image": {
                                        "description": "Obrazek (opcjonalnie). Zapisujesz w root dysku 'public'.",
                                        "type": "string",
                                        "format": "binary",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utworzono",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Dish"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/dishes/{id}": {
            "get": {
                "tags": [
                    "Dishes"
                ],
                "summary": "Pokaż jedną potrawę",
                "operationId": "07b6fe7c8dc79b35e66b58956b97b893",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Dish"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Dishes"
                ],
                "summary": "Zaktualizuj potrawę",
                "operationId": "52b7975eeaea935e1251d215f5ac6bb4",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Wspiera JSON lub multipart/form-data. W JSON obrazka nie wyślesz.",
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "category_id": {
                                        "type": "integer"
                                    },
                                    "cuisine_id": {
                                        "type": "integer"
                                    },
                                    "flavour_id": {
                                        "type": "integer"
                                    },
                                    "description": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "remove_image": {
                                        "description": "Ustaw true, by usunąć istniejący obrazek",
                                        "type": "boolean",
                                        "example": false
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "category_id": {
                                        "type": "integer"
                                    },
                                    "cuisine_id": {
                                        "type": "integer"
                                    },
                                    "flavour_id": {
                                        "type": "integer"
                                    },
                                    "description": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "remove_image": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Dish"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Dishes"
                ],
                "summary": "Usuń potrawę",
                "operationId": "57bb2309cba8e67241d5d84d8ceb6beb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/recommended-dishes": {
            "get": {
                "tags": [
                    "Recommendations"
                ],
                "summary": "Rekomendacje dla użytkowników",
                "description": "Zwraca listę rekomendowanych dań dla aktualnego użytkownika.",
                "operationId": "recommendation",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Maksymalna liczba pozycji",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10,
                            "maximum": 20,
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 101
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Spaghetti Carbonara"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "Classic",
                                                "nullable": true
                                            },
                                            "image_url": {
                                                "type": "string",
                                                "example": "spaghetti.jpg",
                                                "nullable": true
                                            },
                                            "parameters": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 5
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Włoska"
                                                        },
                                                        "type": {
                                                            "type": "string",
                                                            "enum": [
                                                                "category",
                                                                "cuisine",
                                                                "flavour",
                                                                "other"
                                                            ],
                                                            "example": "cuisine"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "match_score": {
                                                "type": "number",
                                                "format": "float",
                                                "example": 3
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/swipe-cards": {
            "get": {
                "tags": [
                    "Swipes"
                ],
                "summary": "Pobierz karty do swipe’owania (nieswipe’owane dania z parametrami)",
                "operationId": "bc06d8eb51e2659b92e2f932a862e578",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Ile kart zwrócić (1–10, domyślnie 5)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 5,
                            "maximum": 10,
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista dań",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Spaghetti Bolognese"
                                            },
                                            "description": {
                                                "type": "string",
                                                "nullable": true
                                            },
                                            "image_url": {
                                                "type": "string",
                                                "example": "spaghetti.jpg",
                                                "nullable": true
                                            },
                                            "parameters": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 12
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "cuisine:Włoska"
                                                        },
                                                        "type": {
                                                            "type": "string",
                                                            "example": "enum"
                                                        },
                                                        "value": {
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 1
                                                        },
                                                        "is_active": {
                                                            "type": "boolean",
                                                            "example": true
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/swipe-decision": {
            "post": {
                "tags": [
                    "Swipes"
                ],
                "summary": "Zapisz decyzję swipe (like/dislike) i zaktualizuj wagi parametrów",
                "operationId": "79222349d0339c05122302c69982cf4e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "dish_id",
                                    "decision"
                                ],
                                "properties": {
                                    "dish_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "decision": {
                                        "type": "string",
                                        "enum": [
                                            "like",
                                            "dislike"
                                        ],
                                        "example": "like"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Zapisano",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Dish not found"
                    },
                    "422": {
                        "description": "Błąd walidacji",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "dish_id": [
                                                    "The selected dish id is invalid."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "AuthUser": {
                "required": [
                    "id",
                    "name",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 7
                    },
                    "name": {
                        "type": "string",
                        "example": "Jan Kowalski"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jan@example.com"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-10-17T19:52:15.000000Z"
                    },
                    "status": {
                        "type": "string",
                        "example": "verification-link-sent"
                    }
                },
                "type": "object"
            },
            "AuthTokenResponse": {
                "required": [
                    "token",
                    "user"
                ],
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "1|abcdefgh..."
                    },
                    "user": {
                        "$ref": "#/components/schemas/AuthUser"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Jan Kowalski"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    }
                },
                "type": "object"
            },
            "EmailOnlyRequest": {
                "required": [
                    "email"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jan@example.com"
                    }
                },
                "type": "object"
            },
            "ResetPasswordRequest": {
                "required": [
                    "email",
                    "token",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "reset-token"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "newPass123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "newPass123"
                    }
                },
                "type": "object"
            },
            "MessageResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Successfully logged out"
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "required": [
                    "message",
                    "errors"
                ],
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    },
                    "errors": {
                        "type": "object",
                        "additionalProperties": {
                            "schema": "AuthSchemas",
                            "type": "array",
                            "items": {
                                "type": "string",
                                "example": "The field is required."
                            }
                        }
                    }
                },
                "type": "object"
            },
            "AuthSchemas": {
                "type": "array",
                "items": {
                    "type": "string",
                    "example": "The field is required."
                }
            },
            "Dish": {
                "required": [
                    "id",
                    "name",
                    "category_id",
                    "cuisine_id",
                    "flavour_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 101
                    },
                    "name": {
                        "type": "string",
                        "example": "Spaghetti Carbonara"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "cuisine_id": {
                        "type": "integer",
                        "example": 3
                    },
                    "flavour_id": {
                        "type": "integer",
                        "example": 5
                    },
                    "image_url": {
                        "type": "string",
                        "example": "spaghetti.jpg",
                        "nullable": true
                    },
                    "image_url_full": {
                        "type": "string",
                        "example": "http://localhost/storage/spaghetti.jpg"
                    },
                    "description": {
                        "type": "string",
                        "example": "Classic Roman pasta.",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "DishWithScore": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Dish"
                    },
                    {
                        "properties": {
                            "match_score": {
                                "type": "number",
                                "format": "float",
                                "example": 0.93
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "ErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    }
                },
                "type": "object"
            },
            "SwipeDecisionRequest": {
                "required": [
                    "dish_id",
                    "decision"
                ],
                "properties": {
                    "dish_id": {
                        "type": "integer",
                        "example": 101
                    },
                    "decision": {
                        "type": "string",
                        "enum": [
                            "like",
                            "dislike"
                        ]
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Dishes",
            "description": "Dishes"
        },
        {
            "name": "Recommendations",
            "description": "Recommendations"
        },
        {
            "name": "Swipes",
            "description": "Swipes"
        }
    ]
}